<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    tools:context=".MainActivity"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:background="@drawable/balatro2_background">

    <TextView
        android:id="@+id/main_title_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/main_title_text"
        android:textSize="40sp"
        android:shadowColor="#000000"
        android:shadowRadius="30"
        android:textColor="@color/white"
        android:layout_marginTop="40dp"
        android:fontFamily="@font/balatro"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">
    </TextView>

    <TextView
        android:id="@+id/main_app_name_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/app_name"
        android:textSize="80sp"
        android:shadowColor="#000000"
        android:shadowRadius="70"
        android:textColor="@color/white"
        android:layout_marginTop="0dp"
        android:fontFamily="@font/balatro"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/main_title_tv">
    </TextView>

    <Button
        android:id="@+id/main_play_btn"
        android:layout_width="160dp"
        android:layout_height="80dp"
        android:layout_marginTop="360dp"
        android:fontFamily="@font/balatro"
        android:text="@string/play_btn_text"
        android:textSize="30sp"
        android:backgroundTint="@color/blue"
        app:cornerRadius="10dp"
        app:layout_constraintEnd_toStartOf="@id/main_quit_btn"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/main_app_name_tv">
    </Button>

    <Button
        android:id="@+id/main_quit_btn"
        android:layout_width="160dp"
        android:layout_height="80dp"
        android:layout_marginTop="360dp"
        android:fontFamily="@font/balatro"
        android:text="@string/quit_btn_text"
        android:textSize="30sp"
        android:backgroundTint="@color/red"
        app:cornerRadius="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/main_play_btn"
        app:layout_constraintTop_toBottomOf="@id/main_app_name_tv">
    </Button>

    <Button
        android:id="@+id/main_collection_btn"
        android:layout_width="160dp"
        android:layout_height="80dp"
        android:layout_marginTop="40dp"
        android:fontFamily="@font/balatro"
        android:text="@string/collection_btn_text"
        android:textSize="19sp"
        android:backgroundTint="@color/yellow"
        app:cornerRadius="10dp"
        app:layout_constraintEnd_toEndOf="@id/main_quit_btn"
        app:layout_constraintStart_toStartOf="@id/main_quit_btn"
        app:layout_constraintTop_toBottomOf="@id/main_quit_btn">
    </Button>

    <Button
        android:id="@+id/main_options_btn"
        android:layout_width="160dp"
        android:layout_height="80dp"
        android:layout_marginTop="40dp"
        android:fontFamily="@font/balatro"
        android:text="@string/options_btn_text"
        android:textSize="19sp"
        android:backgroundTint="@color/green"
        app:cornerRadius="10dp"
        app:layout_constraintEnd_toEndOf="@id/main_play_btn"
        app:layout_constraintStart_toStartOf="@id/main_play_btn"
        app:layout_constraintTop_toBottomOf="@id/main_play_btn">
    </Button>


</androidx.constraintlayout.widget.ConstraintLayout>