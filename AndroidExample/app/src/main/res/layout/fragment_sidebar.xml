<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/sidebar_linearlayout"
    android:layout_width="150dp"
    android:layout_height="420dp"
    android:background="@color/sidebarBackground"
    android:orientation="vertical"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent">

    <Button
        android:id="@+id/sidebar_blind_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/yellow"
        android:fontFamily="@font/balatro"
        android:text="Blind Name"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="18sp"
        app:cornerRadius="10dp">
    </Button>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@color/yellowDark">

        <ImageView
            android:id="@+id/sidebar_blind_iv"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:scaleType="centerCrop"
            android:src="@drawable/blind_icon" />

        <TextView
            android:id="@+id/sidebar_defense_score_required_tv"
            android:layout_width="50dp"
            android:layout_height="50dp">
        </TextView>

        <TextView
            android:id="@+id/sidebar_offense_score_required_tv"
            android:layout_width="50dp"
            android:layout_height="50dp">
        </TextView>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@color/yellowDark">

        <ImageView
            android:id="@+id/sidebar_offense_type_required_iv"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:scaleType="centerCrop"
            android:src="@drawable/blind_offense_required_icon" />

        <TextView
            android:id="@+id/sidebar_current_defense_score_tv"
            android:layout_width="50dp"
            android:layout_height="50dp">
        </TextView>

        <TextView
            android:id="@+id/sidebar_current_offense_score_tv"
            android:layout_width="50dp"
            android:layout_height="50dp">
        </TextView>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@color/sidebarDarkBackground"
        app:cornerRadius="30dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="Selected Hand Type"
            android:textColor="@color/white"
            android:fontFamily="@font/balatro"
            android:textSize="14sp"
            android:textAlignment="center">
        </TextView>


    </LinearLayout>

</LinearLayout>
