<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/sidebar_linearlayout"
    android:layout_width="150dp"
    android:layout_height="420dp"
    android:background="@color/sidebarBackground"
    android:orientation="vertical"
    android:paddingStart="5dp"
    android:paddingEnd="5dp"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="4dp"
        android:background="@drawable/yellow_dark_top_rounded_background">

        <ImageView
            android:id="@+id/sidebar_blind_iv"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:scaleType="centerCrop"
            android:src="@drawable/blind_icon" />

        <TextView
            android:id="@+id/sidebar_defense_score_required_tv"
            android:layout_width="40dp"
            android:layout_height="50dp"
            android:fontFamily="@font/balatro"
            android:layout_marginTop="-7dp"
            android:layout_marginLeft="4dp"
            android:layout_marginRight="4dp"
            android:gravity="center"
            android:text="D Score Req"
            android:textColor="@color/white">
        </TextView>

        <TextView
            android:id="@+id/sidebar_current_defense_score_tv"
            android:text="D Score"
            android:gravity="center"
            android:textColor="@color/white"
            android:fontFamily="@font/balatro"
            android:layout_width="40dp"
            android:layout_height="50dp">
        </TextView>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="-1dp"
        android:background="@drawable/yellow_dark_bottom_rounded_background">

        <ImageView
            android:id="@+id/sidebar_offense_type_required_iv"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:scaleType="centerCrop"
            android:src="@drawable/melee_required_blind" />

        <TextView
            android:id="@+id/sidebar_offense_score_required_tv"
            android:layout_width="40dp"
            android:layout_height="50dp"
            android:fontFamily="@font/balatro"
            android:gravity="center"
            android:layout_marginTop="-7dp"
            android:layout_marginLeft="4dp"
            android:layout_marginRight="4dp"
            android:text="O Score Req"
            android:textColor="@color/white">
        </TextView>

        <TextView
            android:id="@+id/sidebar_current_offense_score_tv"
            android:text="O Score"
            android:gravity="center"
            android:textColor="@color/white"
            android:fontFamily="@font/balatro"
            android:layout_width="40dp"
            android:layout_height="50dp">
        </TextView>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/sidebar_hand_type_linearlayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingBottom="10dp"
        android:layout_marginTop="4dp"
        android:background="@drawable/dark_rounded_background"
        app:cornerRadius="30dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:text="Hand Type"
            android:gravity="center"
            android:textColor="@color/white"
            android:fontFamily="@font/balatro"
            android:textSize="14sp"
            android:textAlignment="center">
        </TextView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:cornerRadius="30dp">

            <TextView
                android:layout_width="60dp"
                android:layout_height="30dp"
                android:gravity="center"
                android:text="#1"
                android:layout_marginStart="8dp"
                android:textColor="@color/white"
                android:fontFamily="@font/balatro"
                android:background="@drawable/blue_rounded_background"
                android:textSize="14sp">
            </TextView>

            <TextView
                android:layout_width="60dp"
                android:layout_height="30dp"
                android:gravity="center"
                android:text="#2"
                android:layout_marginStart="5dp"
                android:layout_marginEnd="5dp"
                android:textColor="@color/white"
                android:fontFamily="@font/balatro"
                android:background="@drawable/red_rounded_background"
                android:textSize="14sp">
            </TextView>


        </LinearLayout>


    </LinearLayout>

    <LinearLayout
        android:id="@+id/sidebar_remaining_hands_discards_linearlayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingBottom="10dp"
        android:layout_marginTop="4dp"
        android:background="@drawable/dark_rounded_background"
        app:cornerRadius="30dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="24dp"
            android:text="Remaining"
            android:gravity="center"
            android:textColor="@color/white"
            android:fontFamily="@font/balatro"
            android:textSize="14sp"
            android:textAlignment="center">
        </TextView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginStart="22dp"
            android:text="Hands     Discards"
            android:textColor="@color/white"
            android:fontFamily="@font/balatro"
            android:background="@drawable/dark_rounded_background"
            android:textSize="11sp">
        </TextView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:cornerRadius="30dp">

            <TextView
                android:layout_width="60dp"
                android:layout_height="30dp"
                android:gravity="center"
                android:text="4"
                android:layout_marginStart="8dp"
                android:textColor="@color/white"
                android:fontFamily="@font/balatro"
                android:background="@drawable/blue_rounded_background"
                android:textSize="14sp">
            </TextView>

            <TextView
                android:id="@+id/sidebar_remaining_discards_tv"
                android:layout_width="60dp"
                android:layout_height="30dp"
                android:gravity="center"
                android:text="3"
                android:layout_marginStart="5dp"
                android:layout_marginEnd="5dp"
                android:textColor="@color/white"
                android:fontFamily="@font/balatro"
                android:background="@drawable/red_rounded_background"
                android:textSize="14sp">
            </TextView>


        </LinearLayout>


    </LinearLayout>

    <LinearLayout
        android:id="@+id/sidebar_ante_round_money_linearlayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingBottom="10dp"
        android:layout_marginTop="4dp"
        android:background="@drawable/dark_rounded_background"
        app:cornerRadius="30dp">

        <TextView
            android:layout_width="60dp"
            android:layout_height="30dp"
            android:layout_gravity="center"
            android:layout_marginTop="4dp"
            android:gravity="center"
            android:text="$4"
            android:textColor="@color/white"
            android:fontFamily="@font/balatro"
            android:background="@drawable/yellow_rounded_background"
            android:textSize="14sp">
        </TextView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginStart="26dp"
            android:text="Ante        Round"
            android:textColor="@color/white"
            android:fontFamily="@font/balatro"
            android:background="@drawable/dark_rounded_background"
            android:textSize="11sp">
        </TextView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:cornerRadius="30dp">

            <TextView
                android:layout_width="60dp"
                android:layout_height="30dp"
                android:gravity="center"
                android:text="1"
                android:layout_marginStart="8dp"
                android:textColor="@color/white"
                android:fontFamily="@font/balatro"
                android:background="@drawable/blue_rounded_background"
                android:textSize="14sp">
            </TextView>

            <TextView
                android:layout_width="60dp"
                android:layout_height="30dp"
                android:gravity="center"
                android:text="1"
                android:layout_marginStart="5dp"
                android:layout_marginEnd="5dp"
                android:textColor="@color/white"
                android:fontFamily="@font/balatro"
                android:background="@drawable/red_rounded_background"
                android:textSize="14sp">
            </TextView>


        </LinearLayout>


    </LinearLayout>

</LinearLayout>
